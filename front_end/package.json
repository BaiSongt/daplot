{
  "name": "daplot-frontend",
  "version": "1.0.0",
  "description": "DaPlot前端模块化架构",
  "main": "src/daplot.js",
  "scripts": {
    "test": "node scripts/run-tests.js all",
    "test:watch": "node scripts/run-tests.js all --watch",
    "test:coverage": "node scripts/run-tests.js coverage",
    "test:ci": "node scripts/run-tests.js ci --ci",
    "test:unit": "node scripts/run-tests.js unit",
    "test:unit:watch": "node scripts/run-tests.js unit --watch",
    "test:integration": "node scripts/run-tests.js integration",
    "test:e2e": "node scripts/run-tests.js e2e",
    "test:e2e:open": "cypress open",
    "test:performance": "node scripts/run-tests.js performance",
    "test:accessibility": "node scripts/run-tests.js accessibility",
    "lint": "node scripts/run-tests.js lint",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack serve --mode development --port 8080",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "clean": "rimraf dist coverage .jest-cache cypress/screenshots cypress/videos",
    "precommit": "npm run lint && npm run test:ci",
    "postinstall": "echo 'Installation complete'"
  },
  "keywords": [
    "data-visualization",
    "charts",
    "excel",
    "analytics"
  ],
  "author": "DaPlot Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@testing-library/jest-dom": "^5.16.0",
    "babel-jest": "^29.5.0",
    "cypress": "^12.17.0",
    "eslint": "^8.42.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-html-reporters": "^3.1.0",
    "rimraf": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "plotly.js": "^2.24.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "Plotly": "readonly",
      "Chart": "readonly"
    }
  }
}