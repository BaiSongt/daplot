            }
        }

        function exportToCSV() {
            if (!isLuckysheetInitialized) {
                showMessage('æ²¡æœ‰å¯å¯¼å‡ºçš„æ•°æ®', 'error');
                return;
            }

            try {
                // è·å–å½“å‰Luckysheetæ•°æ®
                const sheetData = luckysheet.getSheetData();

                // è½¬æ¢ä¸ºCSVæ ¼å¼
                const csvData = [];
                if (sheetData && sheetData.length > 0) {
                    sheetData.forEach(row => {
                        if (row) {
                            const rowData = [];
                            row.forEach(cell => {
                                const value = cell && cell.v !== undefined ? cell.v.toString() : '';
                                // å¤„ç†åŒ…å«é€—å·æˆ–å¼•å·çš„å€¼
                                if (value.includes(',') || value.includes('"') || value.includes('\n')) {
                                    rowData.push('"' + value.replace(/"/g, '""') + '"');
                                } else {
                                    rowData.push(value);
                                }
                            });
                            csvData.push(rowData.join(','));
                        }
                    });
                }

                // åˆ›å»ºä¸‹è½½é“¾æ¥
                const csvContent = csvData.join('\n');
                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                link.setAttribute('href', url);

                const fileName = currentFileId ? `file_${currentFileId.substring(0, 8)}.csv` : 'export.csv';
                link.setAttribute('download', fileName);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                showMessage('CSVæ–‡ä»¶å¯¼å‡ºæˆåŠŸ', 'success');
            } catch (error) {
                console.error('å¯¼å‡ºå¤±è´¥:', error);
                showMessage('å¯¼å‡ºå¤±è´¥: ' + error.message, 'error');
            }
        }

