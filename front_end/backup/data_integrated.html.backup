    <script>
        // å…¨å±€å˜é‡
        let currentFileId = null;
        let currentWorkbook = null;
        let currentHeaders = [];
        let isLuckysheetInitialized = false;
        let hasUnsavedChanges = false;
        let autoSaveInterval = null;

        // APIé…ç½®
        const API_BASE_URL = 'http://localhost:8001';

        // ç­‰å¾… Luckysheet åŠ è½½å®Œæˆ
        function waitForLuckysheet() {
            return new Promise((resolve, reject) => {
                let attempts = 0;
                const maxAttempts = 50; // æœ€å¤šç­‰å¾…5ç§’
                const loadingOverlay = document.getElementById('loadingOverlay');
                
                const checkLuckysheet = () => {
                    attempts++;
                    if (typeof luckysheet !== 'undefined' && luckysheet.create) {
                        console.log('Luckysheet åŠ è½½å®Œæˆ');
                        if (loadingOverlay) {
                            loadingOverlay.classList.add('hidden');
                        }
                        resolve();
                    } else if (attempts >= maxAttempts) {
                        console.error('Luckysheet åŠ è½½è¶…æ—¶');
                        if (loadingOverlay) {
                            loadingOverlay.innerHTML = '<div style="text-align: center; color: #dc3545;"><div>âŒ Luckysheet åŠ è½½å¤±è´¥</div><div style="font-size: 14px; margin-top: 10px;">è¯·æ£€æŸ¥ç½‘ç»œè¿æ¥å¹¶åˆ·æ–°é¡µé¢é‡è¯•</div></div>';
                        }
                        reject(new Error('Luckysheet åŠ è½½è¶…æ—¶ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥'));
                    } else {
                        setTimeout(checkLuckysheet, 100);
                    }
                };
                
                checkLuckysheet();
            });
        }

        // åˆå§‹åŒ–é¡µé¢
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                // ç­‰å¾… Luckysheet åŠ è½½å®Œæˆ
                await waitForLuckysheet();
                
                const fileInput = document.getElementById('fileInput');

                // æ–‡ä»¶é€‰æ‹©äº‹ä»¶
                fileInput.addEventListener('change', handleFileSelect);

                // åŠ è½½æ–‡ä»¶åˆ—è¡¨
                refreshFileList();

                // è®¾ç½®è‡ªåŠ¨ä¿å­˜
                setupAutoSave();
                
                console.log('é¡µé¢åˆå§‹åŒ–å®Œæˆ');
            } catch (error) {
                console.error('é¡µé¢åˆå§‹åŒ–å¤±è´¥:', error);
                showMessage('é¡µé¢åˆå§‹åŒ–å¤±è´¥: ' + error.message, 'error');
            }
        });

        // å¤„ç†å¼‚æ­¥å“åº”é”™è¯¯ï¼ˆChrome æ‰©å±•ç›¸å…³ï¼‰
        window.addEventListener('error', function(event) {
            if (event.message && event.message.includes('message channel closed')) {
                console.warn('æ£€æµ‹åˆ° Chrome æ‰©å±•å¼‚æ­¥å“åº”é”™è¯¯ï¼Œè¿™é€šå¸¸ä¸å½±å“é¡µé¢åŠŸèƒ½:', event.message);
                return true; // é˜»æ­¢é”™è¯¯å†’æ³¡
            }
        });

        // å¤„ç†æœªæ•è·çš„ Promise æ‹’ç»
        window.addEventListener('unhandledrejection', function(event) {
            if (event.reason && event.reason.message && event.reason.message.includes('message channel closed')) {
                console.warn('æ£€æµ‹åˆ° Chrome æ‰©å±• Promise æ‹’ç»é”™è¯¯ï¼Œè¿™é€šå¸¸ä¸å½±å“é¡µé¢åŠŸèƒ½:', event.reason.message);
                event.preventDefault(); // é˜»æ­¢é”™è¯¯æ˜¾ç¤º
                return;
            }
        });

        function handleFileSelect(e) {
            const file = e.target.files[0];
            if (file) {
                uploadFile(file);
            }
        }

        async function uploadFile(file) {
            // éªŒè¯æ–‡ä»¶ç±»å‹
            if (!file.name.match(/\.(xlsx|xls)$/)) {
                showMessage('è¯·é€‰æ‹©Excelæ–‡ä»¶ (.xlsx æˆ– .xls)', 'error');
                return;
            }

            showMessage('æ­£åœ¨ä¸Šä¼ æ–‡ä»¶...', 'success');
            console.log('ğŸ”„ å¼€å§‹ä¸Šä¼ æ–‡ä»¶:', file.name, 'å¤§å°:', file.size, 'bytes');

            const formData = new FormData();
            formData.append('file', file);

            try {
                const response = await fetch(`${API_BASE_URL}/api/upload`, {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`HTTP error! status: ${response.status}, message: ${errorText}`);
                }

                const data = await response.json();

                // å¤„ç†å¤šsheetæ–‡ä»¶å“åº”
                if (data.multiple_sheets) {
                    showMessage(`æ–‡ä»¶ä¸Šä¼ æˆåŠŸï¼å‘ç° ${data.total_sheets} ä¸ªå·¥ä½œè¡¨`, 'success');
                    refreshFileList();

                    // åŠ è½½ç¬¬ä¸€ä¸ªsheet
                    if (data.files && data.files.length > 0) {
                        await loadFile(data.files[0].file_id);
                    }
                } else {
                    // å•sheetæ–‡ä»¶å¤„ç†
                    if (!data.file_id) {
                        throw new Error('æœåŠ¡å™¨å“åº”ä¸­ç¼ºå°‘æ–‡ä»¶ID');
                    }

                    showMessage('æ–‡ä»¶ä¸Šä¼ æˆåŠŸï¼', 'success');
                    refreshFileList();

                    // åŠ è½½æ–‡ä»¶åˆ°Luckysheet
                    await loadFile(data.file_id);
                }

            } catch (error) {
                console.error('âŒ ä¸Šä¼ é”™è¯¯è¯¦æƒ…:', error);
                showMessage('æ–‡ä»¶ä¸Šä¼ å¤±è´¥: ' + error.message, 'error');
            }
        }

        async function refreshFileList() {
            try {
                showMessage('æ­£åœ¨åˆ·æ–°æ–‡ä»¶åˆ—è¡¨...', 'success');

                const response = await fetch(`${API_BASE_URL}/api/files`);
                if (!response.ok) {
                    throw new Error('è·å–æ–‡ä»¶åˆ—è¡¨å¤±è´¥');
                }

                const data = await response.json();
                displayFileList(data.files);

            } catch (error) {
                console.error('åˆ·æ–°æ–‡ä»¶åˆ—è¡¨å¤±è´¥:', error);
                showMessage('åˆ·æ–°æ–‡ä»¶åˆ—è¡¨å¤±è´¥: ' + error.message, 'error');
            }
        }

        function displayFileList(files) {
            const fileList = document.getElementById('fileList');

            if (!files || files.length === 0) {
                fileList.innerHTML = '<div style="text-align: center; color: #666; padding: 20px;">æš‚æ— æ–‡ä»¶</div>';
                return;
            }

            fileList.innerHTML = files.map(file => `
                <div class="file-item ${file.file_id === currentFileId ? 'active' : ''}" onclick="loadFile('${file.file_id}')" style="cursor: pointer; padding: 8px 12px; margin: 2px 0; border: 1px solid #e0e0e0; border-radius: 4px; background: ${file.file_id === currentFileId ? '#e3f2fd' : '#fafafa'}; transition: all 0.2s ease; font-size: 12px;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div style="flex: 1; min-width: 0;">
                            <div style="font-weight: 500; color: #333; font-size: 13px; margin-bottom: 2px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">${file.filename || file.original_filename || `æ–‡ä»¶ ${file.file_id.substring(0, 8)}...`}</div>
                            <div style="color: #666; font-size: 11px;">${file.rows}è¡ŒÃ—${file.columns}åˆ—${file.sheet_name ? ` (${file.sheet_name})` : ''}</div>
